---
import PostLayout from '../../layouts/PostLayout.astro';
import FooterSection from '../../components/FooterSection.astro';
import { spots } from '../../content/wisata/wisataSlug.json';

export function getStaticPaths() {
  return spots.map((spot) => ({
    params: { slug: spot.slug },
    props: { spot },
  }));
}

const { spot } = Astro.props;
---

<PostLayout title={spot.title}>
  <main>
    <section class="ps-4 pe-4 pt-2">
      <div class="lg:flex lg:justify-center sm:items-center lg:h-dvh border-b">
        <div class="lg:w-2/5 lg:space-y-4 md:space-y-3 sm:space-y-2 space-y-1">
          <h1
            class="lg:text-8xl md:text-6xl sm:text-3xl text-2xl text-center font-bold"
          >
            {spot.title}
          </h1>
          <p class="lg:text-3xl md:text-2xl sm:text-xl text-sm font-light text-center lg:pr-4 lg:pt-3 md:pb-5 sm:pb-3 pb-2 italic">
            {spot.subtitle}
          </p>
        </div>
        <div class="lg:w-3/5 w-full lg:h-[90%] md:h-[70%] sm:h-[60%]">
          <img
            src={spot.heroImage}
            alt={spot.heroAlt}
            class="h-full w-full sm:aspect-video aspect-square object-cover"
          />
        </div>
      </div>
    </section>

    <section class="mb-[12%] ps-4 pe-4">
      <div class="lg:ms-72 lg:me-72 sm:space-y-5 text-justify">
        <article>
          <p class="leading-loose pt-3">{spot.firstPara}</p>
          <br />
          <p class="leading-loose">{spot.secondPara}</p>
          <figure class="sm:py-5 py-10 italic text-sm">
            <img
              src={spot.contentImage}
              alt={spot.contentAlt}
              class="block sm:w-4/5 w-full mx-auto sm:aspect-video aspect-square object-cover"
            />
            <figcaption>{spot.contentAlt}</figcaption>
          </figure>
          <p class="leading-loose">{spot.thirdPara}</p>
          <br />
          <iframe src={spot.map} allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="w-full h-[450px]"></iframe>
        </article>
      </div>
    </section>
  </main>
  <FooterSection />
</PostLayout>
