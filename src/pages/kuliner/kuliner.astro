---
import PagesBaseLayout from "../../layouts/PagesBaseLayout.astro";
import WisataHeroSection from "../../layouts/wisata/WisataHeroSection.astro";
import WisataFilter from "../../components/WisataFilter.astro";
import WisataSpot from "../../components/WisataSpot.astro";
import FooterSection from "../../layouts/FooterSection.astro";
import ToTopButton from "../../components/ToTopButton.astro";
import contentPages from '../../data/contentPages.json';

const kuliner = contentPages.kuliner
---

<PagesBaseLayout title="KULINER">
  <header>
    <WisataHeroSection
      heroTitle="KULINER"
      src="https://images.pexels.com/photos/618491/pexels-photo-618491.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
      alt="kuliner background"
    />
  </header>
  <main>
    <section class="sm:ps-6 sm:pe-6 ps-3 pe-3 pb-32">
      <WisataFilter />
      <WisataSpot items={kuliner}/>
    </section>
  </main>
  <FooterSection />
  <ToTopButton />
</PagesBaseLayout>
