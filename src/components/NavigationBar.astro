<nav
  class="navbar bg-reddish sm:py-3 sm:mt-6 flex absolute justify-between w-full z-[3]"
>
  <div class="flex-shrink-0">
    <img
      src="https://upload.wikimedia.org/wikipedia/commons/6/63/Seal_of_Wonogiri_Regency.svg"
      alt="Logo Pemkab Wonogiri"
      class="w-14"
    />
  </div>

  <div class="sm:drawer navbar-end">
    <input id="my-drawer" type="checkbox" class="drawer-toggle" />
    <!-- Drawer button for desktop -->
    <div class="hidden sm:block bg-yellowish btn-circle">
      <label for="my-drawer" class="btn btn-ghost btn-circle drawer-button">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h7"></path>
        </svg>
      </label>
    </div>
    <!-- Dropdown for mobile -->
    <div class="sm:hidden dropdown dropdown-end bg-yellowish btn-circle">
      <label tabindex="0" class="btn btn-ghost btn-circle">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h7"></path>
        </svg>
      </label>
      <ul
        tabindex="0"
        class="dropdown-content menu bg-yellowish text-blue rounded-box z-[1] w-52 shadow"
      >
        <li><a href="/" class="hover:underline">🏠 Home</a></li>
        <li>
          <a href="/akomodasi/akomodasi" class="hover:underline">🏨 Akomodasi</a>
        </li>
        <li>
          <a href="/kuliner/kuliner" class="hover:underline">🍛 Kuliner</a>
        </li>
        <li><a href="/wisata/wisata" class="hover:underline">🌲 Wisata</a></li>
      </ul>
    </div>

    <!-- Drawer side content -->
    <div class="drawer-side z-[2]">
      <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"
      ></label>
      <div
        class="sm:flex hidden items-center sm:w-7/12 sm:min-h-full bg-yellowish text-blue"
      >
        <div class="w-1/2">
          <h1 class="text-6xl pb-8 text-center">Visit Wonogiri</h1>
          <ul class="text-2xl pl-4 space-y-4">
            <li>
              🏠
              <a href="/" class="hover:underline">Home</a>
            </li>
            <li>
              🏨
              <a href="/akomodasi/akomodasi" class="hover:underline"
                >Akomodasi</a
              >
            </li>
            <li>
              🍛
              <a href="/kuliner/kuliner" class="hover:underline">Kuliner</a>
            </li>
            <li>
              🌲
              <a href="/wisata/wisata" class="hover:underline">Wisata</a>
            </li>
          </ul>
        </div>
        <div class="w-1/2 hidden sm:block">
          <img
            src="https://i.pinimg.com/736x/7c/be/af/7cbeafc5cd717a4150a723718edff364.jpg"
            alt="Bukit Cumbri by lutfidhany, Courtesy of Pinterest"
            class="w-full h-screen object-cover"
          />
        </div>
      </div>
    </div>
  </div>
</nav>
