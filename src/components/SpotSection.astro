---
import contentPages from '../data/contentPages.json';
import SeeMoreBtn from './SeeMoreBtn.astro';

const images = contentPages.wisata.slice(3, 7);
---

<section
  class="sm:ps-6 sm:pe-6 ps-3 pe-3 mb-[10%] relative"
>
  <h1
    class="text-center sm:text-6xl text-4xl pb-10 font-bold"
  >
    WISATA
  </h1>
  <div class="carousel w-full lg:h-dvh md:[80vh] h-[70vh]">
    {
      images.map((item, index) => (
        <div id={`slide${index + 1}`} class="carousel-item relative w-full">
          <img
            src={item.image}
            alt={item.alt}
            class="w-full object-cover object-center"
          />
          <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
            <a
              href={`#slide${index === 0 ? images.length : index}`}
              class="btn btn-circle"
            >
              ❮
            </a>
            <a
              href={`#slide${index === images.length - 1 ? 1 : index + 2}`}
              class="btn btn-circle"
            >
              ❯
            </a>
          </div>
          <div class="absolute sm:left-10 sm:bottom-20 left-0 bottom-10 bg-white sm:py-3 py-2 sm:px-5 px-3 text-blue font-semibold sm:text-4xl text-2xl">
            <h1>{item.title || "Venue"}</h1>
          </div>
        </div>
      ))
    }
  </div>
  <SeeMoreBtn href="/wisata/wisata/" />
</section>
